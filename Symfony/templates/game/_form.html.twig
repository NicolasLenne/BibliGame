{{ form_start(form) }}
    <div class="field">
        <label class="label">Nom du jeu</label>
        <div class="control">
            {{ form_widget(form.name)}}
        </div>
        <div class="help is-danger">{{ form_errors(form.name) }}</div>
    </div>
    <div class="field">
        <div class="control">
            <label class="checkbox label"> Jeu en loose ? (sans boîte d'origine)
                {{ form_widget(form.isLoose)}}
            </label>
        </div>
        <div class="help is-danger">{{ form_errors(form.isLoose) }}</div>
    </div>
    <div class="field">
        <div class="file has-name">
            <div class="control">
                <label class="file-label">
                {{ form_widget(form.photo)}}
                <span class="file-cta">
                    <span class="file-icon">
                      <i class="fas fa-upload"></i>
                    </span>
                    <span class="file-label">
                      Envoyez votre photo
                    </span>
                  </span>
                  <span class="file-name">
                    Aucune photo envoyé !
                    
                  </span>
                </label>
                <div class="help is-danger">{{ form_errors(form.photo) }}</div>
            </div>
        </div>
    </div>
    <div class="field">
        <label class="label">Commentaire</label>
        <div class="control">
            {{ form_widget(form.comment)}}
        </div>
        <div class="help is-danger">{{ form_errors(form.comment) }}</div>
    </div>
    <div class="field">
        <div class="control">
            <div class="select">
                {{ form_widget(form.consoles)}}
            </div>
        </div>
    </div>
    {{ form_widget(form) }}
    <button class="button is-primary is-rounded">{{ button_label|default('Sauvegarder') }}</button>
    <a class="button is-info is-rounded" href="{{ path('app_console_index') }}">Annuler</a>
{{ form_end(form) }}
<script>
  const fileInput = document.querySelector('.file-input');
  fileInput.onchange = () => {
    if (fileInput.files.length > 0) {
      const fileName = document.querySelector('.file-name');
      fileName.textContent = fileInput.files[0].name;
    }
  }
</script>