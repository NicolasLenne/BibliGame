{% extends 'member.html.twig' %}

{% block title %}Mon compte{% endblock %}

{% block body %}
    <h3 class="title is-3 has-text-centered">Mon compte</h3>
    <h4 class="title is-4">Bonjour {{ user.firstname }}</h4>

    <div class="box">
        <article class="media">
          <div class="media-left">
            <figure class="image">
              {% if user.picture is not null %}
              <img src="{{ asset('uploads/images/user/' ~ user.picture) }}" alt="" height="128px" width="128px">
              {% else %}
              <img src="{{ asset('assets/img/no-pictures.svg') }}" alt="Placeholder image" height="128px" width="128px">
              {% endif %}
            </figure>
          </div>
          <div class="media-content">
            <div class="content">
              <p>
                <strong>Mon nom : </strong>{{ user.lastname }}
              </p>
              <p>
                <strong>Mon prénom : </strong>{{ user.firstname }}
              </p>
              <p>
                <strong>Mon adresse mail : </strong>{{ user.email }}
              </p>
              <p>
                <strong>Date de création de mon compte : </strong>{{ user.createdAt ? user.createdAt|date('Y-m-d') : '' }}
              </p>
            </div>
          </div>
        </article>
        <footer class="card-footer">
          <a href="{{ path('app_account_edit') }}" class="card-footer-item card-edit">Modifier</a>
      </footer>
      </div>
      <h5 class="title is-5 mx-2">Résumé consoles et jeux :</h5>
      <div class="field is-grouped is-grouped-multiline mx-2">
        <div class="control">
          <div class="tags has-addons">
            <span class="tag is-dark"><a class="has-text-white" href="{{ path('app_console_index') }}">Nombre de console</a></span>
            <span class="tag is-info">{{ nbConsole }}</span>
          </div>
        </div>
        <div class="control">
          <div class="tags has-addons">
            <span class="tag is-dark"><a class="has-text-white" href="{{ path('app_game_index') }}">Nombre de jeux</a></span>
            <span class="tag is-info">{{ nbGame }}</span>
          </div>
        </div>
      </div>
{% endblock %}
