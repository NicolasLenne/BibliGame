{{ form_start(form) }}
    <div class="field">
        <label class="label">Nom de la console</label>
        <div class="control">
            {{ form_row(form.name)}}
        </div>
    </div>
    <div class="field">
        <div class="control">
            <label class="checkbox">
                {{ form_row(form.isLoose)}} En loose ?
            </label>
        </div>
    </div>
    <div class="field">
        <label class="label">Photo</label>
        <div class="control">
            {{ form_row(form.photo)}}
        </div>
    </div>
    <div class="field">
        <label class="label">Commentaire</label>
        <div class="control">
            {{ form_row(form.comment)}}
        </div>
    </div>
    {{ form_widget(form) }}
    <button class="button is-info is-rounded">{{ button_label|default('Sauvegarder') }}</button>
{{ form_end(form) }}
