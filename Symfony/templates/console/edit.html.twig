{% extends 'member.html.twig' %}

{% block title %}Modifier la console : {{ console.name }}{% endblock %}

{% block body %}
<h3 class="title is-3 has-text-centered">Modifier la console : {{ console.name }}</h3>

<div class="is-flex is-flex-direction-column px-2 is-flex-mobile">
    <div>
    {{ include('console/_form.html.twig', {'button_label': 'Mettre à jour'}) }}

    </div>
    <div class="mt-4">
        {% if console.id %}
        <form method="post" action="{{ path('app_console_delete', {'id': console.id}) }}" onsubmit="return confirm('Attention ! En supprimant cette console les jeux associés seront égallement supprimés. Confirmez cette action ?');">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ console.id) }}">
            <button class="button is-danger is-rounded">Supprimer</button>
        </form>
        {% endif %}
    </div>
</div>
{% endblock %}
