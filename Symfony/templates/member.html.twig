<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>{% block title %}BibliGame - Votre bibliothèque dédié aux jeux video{% endblock %}</title>
    <link rel="icon"
        href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
    {{ encore_entry_script_tags('app') }}
    {% endblock %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css">
    <link rel="stylesheet" href="{{ asset('assets/css/member.css') }}">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
        rel="stylesheet">
</head>

<body class="member-body">
    <header>
        <div class="has-text-centered py-4">
            <h1 class="title">BibliGame</h1>
            <h2 class="subtitle">Votre bibliothèque dédié aux jeux video</h2>
        </div>
        
    </header>
    <nav class="navbar" role="navigation" aria-label="main navigation">
        <div class="navbar-brand">
            <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false"
                data-target="navbarBasicExample">
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
            </a>
        </div>

        <div id="navbarBasicExample" class="navbar-menu">
            <div class="navbar-start">

                <a class="navbar-item" href="{{ path('app_game_index')}}">
                    Mes jeux
                </a>

                <a class="navbar-item" href="{{ path('app_console_index')}}">
                    Mes consoles
                </a>

            </div>

            <div class="navbar-end">
                <a class="navbar-item" href="{{ path('app_account_show') }}">
                    Mon compte
                </a>
                <div class="navbar-item">
                    <div class="buttons">
                        <a class="button is-danger" href="{{ path('logout') }}">
                            <strong>Deconnexion</strong>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </nav>
    <section class="container">
    {% block body %}{% endblock %}
    </section> 
</body>

</html>